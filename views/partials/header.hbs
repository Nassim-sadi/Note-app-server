<!-- mobile menu bar -->
<div class='bg-indigo-800 text-gray-100 flex justify-between md:hidden'>
  <!-- logo -->
  <div class='flex'>

    <img
      src='{{profilePicture}} '
      alt='profile picture'
      class='rounded-full h-12 m-2'
    />
    <p class='block py-4 text-white font-bold'>{{name}}</p>
  </div>

  <!-- mobile menu button -->
  <button class='mobile-menu-button p-4 focus:outline-none focus:bg-gray-700'>
    <svg
      class='h-5 w-5 pointer-events-none'
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke='currentColor'
    >
      <path
        class='pointer-events-none'
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M4 6h16M4 12h16M4 18h16'
      ></path>
    </svg>
  </button>
</div>

<!-- sidebar -->
<div
  class='sidebar bg-indigo-800 text-blue-100 w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out z-20'
>

  <!-- logo -->
  <a href='/' class='text-white flex items-center space-x-2 px-4'>

    <img src='{{profilePicture}}' class='rounded-full h-12' />

    <span class='text-2xl font-extrabold'>{{name}}</span>
  </a>

  <!-- nav -->
  <nav>
    <a
      href='/dashboard'
      class='block py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-400 hover:text-white'
    >
      Dashboard
    </a>
    <a
      href='/about'
      class='block py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-400 hover:text-white'
    >
      About
    </a>
    <a
      href='/auth/logout'
      class='block py-2.5 px-4 rounded transition duration-200 hover:bg-indigo-400 hover:text-white'
    >
      Logout
    </a>
  </nav>
</div>